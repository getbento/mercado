                            "selfhosted_name": {
                                "title": "Font Family",
                                "type": "text",
                                "display_logic": {
                                    "fonttype": {
                                        "value": "selfhosted"
                                    }
                                }
                            },
                            "selfhosted_eot": {
                                "title": "EOT",
                                "type": "file",
                                "helper": "Optional. Browser Support: IE6-9",
                                "display_logic": {
                                    "fonttype": {
                                        "value": "selfhosted"
                                    }
                                }
                            },
                            "selfhosted_woff2": {
                                "title": "WOFF2",
                                "type": "file",
                                "helper": "Optional. Browser Support: Chrome 36.0+, Firefox 35.0+, Opera 26.0+",
                                "display_logic": {
                                    "fonttype": {
                                        "value": "selfhosted"
                                    }
                                }
                            },
                            "selfhosted_woff": {
                                "title": "WOFF",
                                "type": "file",
