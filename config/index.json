{
  "name": "Homepage",
  "fields":{
    "home-gallery":{
      "title": "Carousel",
      "type": "section",
      "items":{
        "slides": {
          "type": "repeater",
          "items":{
            "section_type":{
              "type": "dropdown",
              "options": ["Post Select", "Custom Slide"],
            },
            "post_slide":{
              "type": "section",
              "items":{
                "box_type":{
                  "type": "dropdown",
                  "options": ["Restaurant", "Blog", "Event", "Kiosks"],
                  "display_logic": {
                    "section_type": "Post Select"
                  }
                },
                "restaurant_box":{
                  "type": "relationship",
                  "items":{
                    "box": "restaurant",
                    "display_logic":{
                      "box_type": "Restaurant"
                    }
                  }

                }
              }
            },
            "custom_slide":{
              "type": "section",
              "items":{
                "title": "text",
                "image": "image",
                "description": "wysiwyg",
                "call_to_action": "text",
                "link": "text",
                "display_logic": {
                  "section_type" : "Custom Slide"
                }
              }
            }
          }
        }
      }
    },
    "home-desc":{
      "title": "Description",
      "type": "section",
      "items":{
        "description": "wysiwyg",
        "call_to_action": "text",
        "link": "text"
      }
    },
  },
  "wireframe":[
    "section-home-gallery",
    "section-home-desc"
  ]
}
